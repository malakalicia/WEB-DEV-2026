{
  "name": "smarthr-backend",
  "version": "1.0.0",
  "description": "Backend API pour SmartHR - Plateforme de recrutement intelligent",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",

    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",

    "clean": "rm -rf node_modules coverage",
    "install:deps": "npm install",

    "db:init": "node scripts/init-db.js",
    "db:schema": "psql -f sql/schema.sql",
    "db:seed": "psql -f sql/seed.sql",

    "validate": "npm run test",
    "build": "npm run validate && echo 'Build successful'",
    "build:prod": "NODE_ENV=production npm run build",

    "deploy": "node scripts/deploy.js",

    "ci": "npm run clean && npm install && npm run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "recruitment",
    "hr",
    "ai",
    "groq",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "SmartHR Team - ENSIAS 2025-2026",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "groq-sdk": "^0.37.0",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  }
}
